    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <% @blogs.each do |blog| %>
              <div class="post-preview">
                <a href="blogs/<%= blog.id %>">
                        <h2 class="post-title">
                          <%= blog.title %>
                        </h2>
                        <h3 class="post-subtitle">
                          <%= blog.content %>
                        </h3>
                  </a>
                    <p class="post-meta"><%= blog.created_at %></p>
                <hr>
            <% end %>
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <%= link_to 'New Blog', new_blog_path %>
